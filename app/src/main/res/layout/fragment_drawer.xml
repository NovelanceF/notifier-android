<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#aa000000"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/drawer_grade_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Grade:"
        android:textColor="@drawable/drawer_text_color"
        android:padding="10dp"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/drawer_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/drawer_text_color"
        android:text="2012"
        android:textSize="36sp"
        android:layout_below="@id/drawer_grade_label"
        android:paddingLeft="12dp"
        android:layout_marginTop="-12dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/drawer_grade"
        android:orientation="vertical">

        <Button
            android:id="@+id/drawer_button_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_button"
            android:text="Settings"
            android:textColor="@drawable/drawer_text_color"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffdfdfdf"
            android:layout_marginTop="-4dp"/>

        <Button
            android:id="@+id/drawer_button_taged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_button"
            android:text="Taged"
            android:textSize="20sp"
            android:textColor="@drawable/drawer_text_color"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffdfdfdf"
            android:layout_marginTop="-4dp"/>

        <Button
            android:id="@+id/drawer_button_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_button"
            android:text="About"
            android:textSize="20sp"
            android:textColor="@drawable/drawer_text_color"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffdfdfdf"
            android:layout_marginTop="-4dp"/>

    </LinearLayout>

</RelativeLayout>