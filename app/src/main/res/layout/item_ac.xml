<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffdfdfdf">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/ac_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#ffcfcfcf"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_alignBottom="@+id/ac_image">

        <TextView
            android:id="@+id/ac_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="Title:"
            android:lineSpacingExtra="1dp"
            android:textColor="#ffdfdfdf"
            android:textSize="15sp"
            android:maxLength="26"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/ac_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="body detail"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:maxLength="45"
            android:layout_below="@id/ac_title"
            android:textColor="#ffaaaaaa"/>

        </RelativeLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/ac_time"
        android:layout_below="@id/ac_image"
        android:padding="5dp"
        android:alpha="0.55"
        android:src="@drawable/clock"/>

    <TextView
        android:id="@+id/ac_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="12sp"
        android:maxLength="13"
        android:layout_marginLeft="-7dp"
        android:layout_below="@id/ac_image"
        android:layout_alignParentRight="true"
        android:textColor="#ffaaaaaa"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="1px"
        android:layout_below="@id/ac_time"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="#ffaaaaaa"/>


</RelativeLayout>